@model LoginVM

<div class="content-wrapper">
    <div class="row">
        <div az class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Login</h4>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="UsernameOrEmail">Username or email</label>
                            <input asp-for="UsernameOrEmail" class="form-control"  placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Email">
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>